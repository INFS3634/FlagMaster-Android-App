<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/easyQuiz"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="336dp"
        android:background="#0C3B2E"
        android:text="EASY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mediumQuiz"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="336dp"
        android:background="#0C3B2E"
        android:text="MEDIUM"
        app:layout_constraintStart_toEndOf="@+id/easyQuiz"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hardQuiz"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="29dp"
        android:background="#0C3B2E"
        android:text="HARD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mediumQuiz"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/mediumQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow_star" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/hardQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow_star" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="316dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/hardQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow_star" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="340dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/hardQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow_star" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/mediumQuiz"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:srcCompat="@drawable/yellow_star" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/easyQuiz"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:srcCompat="@drawable/black_star" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/easyQuiz"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:srcCompat="@drawable/black_star" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/easyQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/yellow_star" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="25dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:srcCompat="@drawable/black_star" />

</androidx.constraintlayout.widget.ConstraintLayout>