<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0C3B2E">

    //Create Bottom Navigation View
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_navigation_menu"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/mProfilePhoto"
        android:layout_width="126dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/mUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/mProfilePhoto"
        app:layout_constraintTop_toBottomOf="@+id/mName" />

    <TextView
        android:id="@+id/mName"
        android:layout_width="108dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="67dp"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/mProfilePhoto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="17dp"
        android:text="Achievements"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mProfilePhoto" />

    <ImageView
        android:id="@+id/squareBox"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/square_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/mCountLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textColor="#0C3B2E"
        android:textFontWeight="10"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/squareBox"
        app:layout_constraintTop_toTopOf="@+id/squareBox" />

    <ImageView
        android:id="@+id/squareBox2"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/square_box"
        app:layout_constraintStart_toEndOf="@+id/squareBox"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/mCountPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textColor="#0C3B2E"
        android:textFontWeight="10"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/squareBox2"
        app:layout_constraintTop_toTopOf="@+id/squareBox2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="Badges Earned"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/circle_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/circle_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_1" />

    <ImageView
        android:id="@+id/circle_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintStart_toEndOf="@+id/circle_3"
        app:layout_constraintTop_toBottomOf="@+id/circle_" />

    <ImageView
        android:id="@+id/circle_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintStart_toEndOf="@+id/circle_4"
        app:layout_constraintTop_toBottomOf="@+id/circle_2" />

    <ImageView
        android:id="@+id/oceaniaBadge"
        android:layout_width="79dp"
        android:layout_height="86dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/circle_5"
        app:layout_constraintTop_toTopOf="@+id/circle_5"
        app:srcCompat="@drawable/oceania_badge" />

    <ImageView
        android:id="@+id/southAmericaBadge"
        android:layout_width="90dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/circle_4"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/circle_4"
        app:layout_constraintTop_toTopOf="@+id/circle_4"
        app:srcCompat="@drawable/south_america_badge" />

    <ImageView
        android:id="@+id/northAmericaBadge"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/circle_3"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="@+id/circle_3"
        app:layout_constraintTop_toTopOf="@+id/circle_3"
        app:srcCompat="@drawable/north_america_badge" />

    <ImageView
        android:id="@+id/circle_"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintStart_toEndOf="@+id/circle_1"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/circle_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintStart_toEndOf="@+id/circle_"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/circle_6"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/badge_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/europeBadge"
        android:layout_width="72dp"
        android:layout_height="78dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/circle_2"
        app:layout_constraintStart_toStartOf="@+id/circle_2"
        app:layout_constraintTop_toTopOf="@+id/circle_2"
        app:srcCompat="@drawable/europe_badge" />

    <ImageView
        android:id="@+id/asiaBadge"
        android:layout_width="88dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/circle_"
        app:layout_constraintEnd_toEndOf="@+id/circle_"
        app:layout_constraintStart_toStartOf="@+id/circle_"
        app:layout_constraintTop_toTopOf="@+id/circle_"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/asia_badge" />

    <ImageView
        android:id="@+id/africaBadge"
        android:layout_width="85dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/circle_1"
        app:layout_constraintTop_toTopOf="@+id/circle_1"
        app:srcCompat="@drawable/africa_badge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="63dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Points Earned"
        android:textColor="#97000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/squareBox2"
        app:layout_constraintTop_toTopOf="@+id/squareBox2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Quizzes Passed"
        android:textColor="#97000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/squareBox"
        app:layout_constraintTop_toTopOf="@+id/squareBox" />

    <ImageView
        android:id="@+id/settingButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting" />

    //Draw a horizontal line at the top of the screen

</androidx.constraintlayout.widget.ConstraintLayout>